<div class=" container mt-5">
	<form action="/campgrounds/<%= campe._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Name of campground:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="camp[name]" value="<%=campe.name %>" required>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Image url:</label>
    <input type="text" class="form-control" id="exampleInputPassword1" name="camp[image]" value="<%=campe.image %>"required>
  </div>
		<div class="form-group">
    <label for="exampleInputaddress">Address:</label>
    <input type="text" class="form-control" id="exampleInputaddress" name="camp[address]" value="<%=campe.address %>" required>
  </div>
		<div class="form-group">
    <label for="exampleInputCost">Cost per day in Rupees:</label>
    <input type="text" class="form-control" id="exampleInputCost" name="camp[cost]" value="<%=campe.cost %>"required>
  </div>
		<div class="form-group">
    <label for="exampleInputamenities">Amenities available:</label>
    <input type="text" class="form-control" id="exampleInputamenities" name="camp[amenities]" value="<%=campe.amenities %>" required>
  </div>
  <div class="form-group">
    <label for="exampleInputdescription1">Description:</label>
	  <textarea   class="form-control" id="exampleInputdescription1" name="camp[description]"  required><%= campe.description %></textarea>
  </div>	
  <input type="submit" class="btn btn-primary">
</form>

</div>





